<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa leku"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edit_med_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lek1 500 mg"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ilość kapsułek"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edit_med_dosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1 kapsułka"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_delete_med"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuń lek"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="8dp"/>
</LinearLayout>